{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "background": "black",
    "axis": {
      "labelColor": "whitesmoke",
      "titleColor": "whitesmoke"
    }
  },
  "width": 1200,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/meanTempData.csv",
    "format": { "type": "csv" }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelFlush": true,
            "labelPadding": 10,
            "labelColor": "whitesmoke",
            "tickColor": "whitesmoke"
          }
        },
        "y": {
          "field": "mean temp deviation",
          "type": "quantitative",
          "title": "Mean Temperature Anomaly"
        },
        "color": {
          "field": "mean temp deviation",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "range": ["yellow", "darkred"]
          },
          "legend": null
        },
        "tooltip": [
          { "field": "year", "title": "Year" },
          { "field": "mean temp deviation", "title": "Mean Temperature Anomaly" },
          { "field": "emissions", "title": "Kilotons of CO2" }
        ]
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelFlush": true,
            "labelPadding": 10,
            "labelColor": "whitesmoke",
            "tickColor": "whitesmoke"
          }
        },
        "y": {
          "field": "emissions",
          "type": "quantitative",
          "title": "Kilotons of CO2"
        },
        "color": { "value": "whitesmoke" },
        "tooltip": [
          { "field": "year", "title": "Year" },
          { "field": "mean temp deviation", "title": "Mean Temperature Anomaly" },
          { "field": "emissions", "title": "Kilotons of CO2" }
        ]
      }
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}