{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/landDamage.csv",
      "format": { "type": "csv" }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "x": {
            "field": "temp",
            "type": "quantitative",
            "axis": { "title": "Temperature (Â°C)" }
          },
          "y": {
            "field": "emissions",
            "type": "quantitative",
            "axis": { "title": "Greenhouse Gas Emissions" }
          },
          "size": {
            "field": "land damage",
            "type": "quantitative",
            "scale": { "type": "linear", "range": [1000, 5000] },
            "title": "Land Damage"
          },
          "color": {
            "field": "land damage",
            "type": "quantitative",
            "scale": { "type": "linear", "range": ["yellow", "red"] },
            "title": "Land Damage"
          },
          "tooltip": [
            { "field": "state", "title": "State" },
            { "field": "temp", "title": "Temp Deviation" },
            { "field": "emissions", "title": "Emissions" },
            { "field": "land damage", "title": "Land Damage" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle"
        },
        "encoding": {
          "x": {
            "field": "temp",
            "type": "quantitative"
          },
          "y": {
            "field": "emissions",
            "type": "quantitative"
          },
          "text": {
            "field": "state"
          },
          "color": {
            "value": "black"
          }
        }
      }
    ],
    "title": "Land Damage",
    "width": 400,
    "height": 400
  }
  