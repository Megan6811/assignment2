{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "black",
  "hconcat": [
    {
      "width": 600,
      "height": 400,
      "title": {
        "text": "Land Damage over Time",
        "fontSize": 30,
        "color": "whitesmoke"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/annual-change-forest-area.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "calculate": "abs(datum.fires)", "as": "Fires" },
        { "calculate": "abs(datum.other)", "as": "Other" },
        { "fold": ["Fires", "Other"] }
      ],
      "mark": {
        "type": "area",
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": { "title": "Year", "labelColor": "whitesmoke", "titleColor": "whitesmoke" }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": { "title": "Land Area Lost (km^2)", "labelColor": "whitesmoke", "titleColor": "whitesmoke" }
        },
        "color": {
          "field": "key",
          "type": "nominal",
          "scale": {
            "domain": ["Fires", "Other"],
            "range": ["chocolate", "olive"]
          },
          "legend": {
            "title": "Cause of Damage",
            "titleColor": "whitesmoke",
            "labelColor": "whitesmoke"
          }
        },
        "tooltip": [
          {"field": "key", "title": "Cause"},
          {"field": "value", "title": "Land Area Lost (km^2)"}
        ]
      }
    },
    {
      "width": 400,
      "height": 400,
      "title": {
        "text": "Land Damage by State",
        "fontSize": 30,
        "color": "whitesmoke"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/landDamage.csv",
        "format": { "type": "csv" }
      },
      "layer": [ 
        {
          "mark": "circle",
          "encoding": {
            "x": {
              "field": "temp",
              "type": "quantitative",
              "axis": { "title": "Temperature (Â°C)", "labelColor": "whitesmoke", "titleColor": "whitesmoke" },
              "scale": { "domain": [0, 1.5] }
            },
            "y": {
              "field": "emissions",
              "type": "quantitative",
              "axis": { "title": "Greenhouse Gas Emissions", "labelColor": "whitesmoke", "titleColor": "whitesmoke" },
              "scale": { "domain": [-20, 180] }
            },
            "size": {
              "field": "land damage",
              "type": "quantitative",
              "scale": { "range": [100, 6000] },
              "title": "Land Damage"
            },
            "color": {
              "field": "land damage",
              "type": "quantitative",
              "scale": { "range": ["yellow", "red"] },
              "title": "Land Damage",
              "legend": { "titleColor": "whitesmoke", "labelColor": "whitesmoke" }
            },
            "tooltip": [
              { "field": "state", "title": "State" },
              { "field": "temp", "title": "Temp Deviation" },
              { "field": "emissions", "title": "Emissions" },
              { "field": "land damage", "title": "Land Damage" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "color": "white",
            "fontSize": 12
          },
          "encoding": {
            "x": { "field": "temp", "type": "quantitative" },
            "y": { "field": "emissions", "type": "quantitative" },
            "text": { "field": "state", "type": "nominal" }
          }
        }
      ]
    }
  ]
}