{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Bushfire Effect on Land:",
    "fontSize": 50,
    "color": "whitesmoke"
  },
  "background": "black",
  "hconcat": [
    {
      "title": { "text": "Change in Forest Area Over Time", "color": "whitesmoke", "fontSize": 30 },
      "width": 600,
      "height": 400,
      "data": {
        "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/annual-change-forest-area.csv",
        "format": { "type": "csv" }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": { "title": "Year", "labelColor": "whitesmoke", "titleColor": "whitesmoke" }
        }
      },
      "transform": [
        { "calculate": "abs(datum.fires)", "as": "fires_abs" },
        { "calculate": "abs(datum.other)", "as": "other_abs" }
      ],
      "layer": [
        {
          "mark": "area",
          "encoding": {
            "y": {
              "field": "fires_abs",
              "type": "quantitative",
              "stack": "zero",
              "axis": { "title": "Land Area Lost", "labelColor": "whitesmoke", "titleColor": "whitesmoke" }
            },
            "color": { "value": "chocolate" }
          }
        },
        {
          "mark": "area",
          "encoding": {
            "y": {
              "field": "other_abs",
              "type": "quantitative",
              "stack": "zero"
            },
            "color": { "value": "lightgray" }
          }
        }
      ]
    },
    {
      "title": { "text": "Correlation between Climate and Bushfire Damage", "color": "whitesmoke", "fontSize": 30 },
      "width": 400,
      "height": 400,
      "data": {
        "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/landDamage.csv",
        "format": { "type": "csv" }
      },
      "layer": [
        {
          "mark": "circle",
          "encoding": {
            "x": {
              "field": "temp",
              "type": "quantitative",
              "axis": { "title": "Temperature (Â°C)", "labelColor": "whitesmoke", "titleColor": "whitesmoke" }
            },
            "y": {
              "field": "emissions",
              "type": "quantitative",
              "axis": { "title": "Greenhouse Gas Emissions", "labelColor": "whitesmoke", "titleColor": "whitesmoke" }
            },
            "size": {
              "field": "land damage",
              "type": "quantitative",
              "scale": { "type": "linear", "range": [500, 6000] },
              "title": "Land Damage"
            },
            "color": {
              "field": "land damage",
              "type": "quantitative",
              "scale": { "range": ["yellow", "red"] },
              "title": "Land Damage",
              "legend": { "titleColor": "whitesmoke", "labelColor": "whitesmoke" }
            },
            "tooltip": [
              { "field": "state", "title": "State" },
              { "field": "temp", "title": "Temp Deviation" },
              { "field": "emissions", "title": "Emissions" },
              { "field": "land damage", "title": "Land Damage" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle"
          },
          "encoding": {
            "x": {
              "field": "temp",
              "type": "quantitative"
            },
            "y": {
              "field": "emissions",
              "type": "quantitative"
            },
            "text": {
              "field": "state"
            },
            "color": {
              "value": "whitesmoke"
            }
          }
        }
      ]
    }
  ]
}
