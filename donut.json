{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "background": "black",
    "config": {
      "title": {
        "color": "whitesmoke"
      },
      "axis": {
        "labelColor": "whitesmoke",
        "titleColor": "whitesmoke"
      },
      "view": {
        "stroke": "transparent"
      },
      "legend": {
        "titleColor": "whitesmoke", 
        "labelColor": "whitesmoke" 
         }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/animals.csv"
    },
    "mark": "arc",
    "encoding": {
      "theta": {"field": "deaths", "type": "quantitative"},
      "color": {
        "title": "Animal:",
        "field": "animal",
        "type": "nominal",
        "scale": {"range": ["darkred", "chocolate", "goldenrod", "olive"]}
      },
      "tooltip": [
        {"field": "animal", "type": "nominal"},
        {"field": "deaths", "type": "quantitative"}
      ]
    },
    "title": {
      "text": "Bushfire Effects on Animals:",
      "fontSize": 50,
      "color": "whitesmoke"
    }
  }
  