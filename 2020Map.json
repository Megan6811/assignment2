{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "background": "black"
  },
  "title": {
    "text": "Fire Radiative Power",
    "fontSize": 14,
    "anchor": "middle",
    "color": "whitesmoke"
  },
  "hconcat": [
    {
      "title": {
        "text": "2002",
        "fontSize": 10,
        "anchor": "middle",
        "offset": 10,
        "color": "whitesmoke"
      },
      "width": 610,
      "height": 450,
      "projection": { "type": "mercator" },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/thisistheLASTTIMEITRYTHIS.topojson",
            "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
          },
          "mark": { "type": "geoshape", "fill": "darkgray", "stroke": "whitesmoke" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/fireData2002.csv"
          },
          "mark": {
            "type": "circle",
            "tooltip": true 
          },
          "encoding": {
            "longitude": { "field": "longitude", "type": "quantitative" },
            "latitude": { "field": "latitude", "type": "quantitative" },
            "color": {
              "field": "frp",
              "type": "quantitative",
              "title": "FRP",
              "scale": {
                "type": "sqrt",
                "domain": [0, 12000],
                "range": ["yellow", "red"]
              },
              "legend": {
                "title": "FRP",
                "labelFontSize": 10,
                "titleColor": "whitesmoke",
                "labelColor": "whitesmoke"
              }
            },
            "size": { "value": 120 }
          }
        }
      ]
    },
    {
      "title": {
        "text": "2020",
        "fontSize": 10,
        "anchor": "middle",
        "offset": 10,
        "color": "whitesmoke"
      },
      "width": 610,
      "height": 450,
      "projection": { "type": "mercator" },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/thisistheLASTTIMEITRYTHIS.topojson",
            "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
          },
          "mark": { "type": "geoshape", "fill": "darkgray", "stroke": "black" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/actualFireData.csv"
          },
          "mark": {
            "type": "circle",
            "tooltip": true  
          },
          "encoding": {
            "longitude": { "field": "longitude", "type": "quantitative" },
            "latitude": { "field": "latitude", "type": "quantitative" },
            "color": {
              "field": "frp",
              "type": "quantitative",
              "scale": {
                "type": "sqrt",
                "domain": [0, 12000],
                "range": ["yellow", "red"]
              },
              "title": "FRP"
            },
            "size": { "value": 120 }
          }
        }
      ]
    }
  ]
}
