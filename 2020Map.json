{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 450,
  "title": {
    "text": "Australian Bushfire Satellite Data 2020",
    "fontSize": 18,
    "anchor": "middle",
    "offset": 10
  },
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/thisistheLASTTIMEITRYTHIS.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "black" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Megan6811/assignment2/main/actualFireData.csv"
      },
      "mark": { "type": "circle" },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "color": {
          "field": "frp",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "domain": [0, 12000],
            "range": ["lightyellow", "red"]
          }
        },
        "size": { "value": 120 }
      }
    }
  ]
}
